[user]
    name = Walter Chavarria
    email = wchavarria03@gmail.com
    signingkey = ~/.ssh/id_ed25519.pub
[branch]
    autosetuprebase = always
[commit]
    gpgsign = true
[core]
    editor = nvim
    excludesfile = /Users/wchavarria/.gitignore_global
[push]
    default = simple
	autoSetupRemote = true
[pull]
    rebase = true
[gpg]
    format = ssh
[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
	allowedSignersFile = /Users/wchavarria/.ssh/allowed_signers
[url "git@github.com:"]
    insteadOf = https://github.com/
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold
[color "status"]
    untracked = cyan
    added = green
    changed = yellow
    branch = magenta normal bold
[alias]
    co = checkout
    st = status
    ci = commit
    br = branch
    pl = pull --rebase
    df = diff
    dc = diff --cached
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    ign = ls-files -o -i --exclude-standard #ignored by git
[init]
	defaultBranch = main
[include]
	path = ~/code/secrets/git.inc
